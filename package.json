{
  "name": "rollup-jest-boilerplate",
  "version": "1.0.1",
  "main": "dist/rollup-jest-boilerplate.cjs.js",
  "module": "dist/rollup-jest-boilerplate.esm.js",
  "browser": "dist/rollup-jest-boilerplate.umd.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/algolia/rollup-jest-boilerplate"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.8.0",
    "concurrently": "4.1.1",
    "jest": "24.8.0",
    "rollup": "1.19.4",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "serve": "11.1.0"
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "watch": "concurrently 'yarn build:watch' 'yarn serve -l tcp://127.0.0.1'",
    "test": "jest && yarn build"
  },
  "renovate": {
    "extends": [
      "config:js-lib"
    ],
    "automerge": true,
    "major": {
      "automerge": false
    },
    "automergeType": "branch"
  },
  "files": [
    "dist"
  ]
}
